<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back1"
    tools:context=".MainActivity">

    <ImageButton
        android:id="@+id/values"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="284dp"
        android:background="#00FFFFFF"
        android:backgroundTint="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/value" />

    <ImageView
        android:id="@+id/pin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="21dp"
        android:layout_marginBottom="32dp"
        android:elevation="5dp"
        app:layout_constraintBottom_toBottomOf="@+id/banks"
        app:layout_constraintStart_toStartOf="@+id/banks"
        app:srcCompat="@drawable/pin" />

    <TextView
        android:id="@+id/titleTxt"
        android:layout_width="234dp"
        android:layout_height="87dp"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="15dp"
        android:text="WorldSkills Bank"
        android:textAlignment="center"
        android:textColor="#A26BB9"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/banks"
        app:layout_constraintStart_toEndOf="@+id/icon" />

    <ImageButton
        android:id="@+id/icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginBottom="56dp"
        android:background="#00FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/banks"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/icon2" />

    <ImageButton
        android:id="@+id/banks"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="56dp"
        android:background="#00FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/values"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.529"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/title2" />

    <ImageButton
        android:id="@+id/enterBtn"
        android:layout_width="257dp"
        android:layout_height="91dp"
        android:background="#00FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.529"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/enter2"
        tools:layout_editor_absoluteY="489dp" />

    <TextView
        android:id="@+id/dollar"
        android:layout_width="88dp"
        android:layout_height="16dp"
        android:text="TextView"
        app:layout_constraintBottom_toBottomOf="@+id/values"
        app:layout_constraintEnd_toEndOf="@+id/values"
        app:layout_constraintStart_toStartOf="@+id/values"
        app:layout_constraintTop_toTopOf="@+id/values" />

    <TextView
        android:id="@+id/euro"
        android:layout_width="82dp"
        android:layout_height="18dp"
        android:layout_marginBottom="16dp"
        android:text="TextView"
        app:layout_constraintBottom_toBottomOf="@+id/values"
        app:layout_constraintEnd_toEndOf="@+id/values"
        app:layout_constraintStart_toStartOf="@+id/values" />
</androidx.constraintlayout.widget.ConstraintLayout>